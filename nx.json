{
  "$schema":            "./node_modules/nx/schemas/nx-schema.json",
  "affected":           {
    "defaultBase": "main"
  },
  "defaultProject":     "shortcuts-api",
  "namedInputs":        {
    "default":       [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production":    [
      "default"
    ],
    "sharedGlobals": []
  },
  "npmScope":           "gavinsawyer",
  "targetDefaults":     {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs":    [
        "production",
        "^production"
      ]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "accessToken":         "${NX_CLOUD_ACCESS_TOKEN}",
        "cacheableOperations": [
          "build"
        ]
      },
      "runner":  "@nrwl/nx-cloud"
    }
  }
}
